<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- pink
        <item name="colorPrimary">#AD1457</item>
        <item name="colorPrimaryDark">#AD1457</item>
         <item name="colorAccent">#AD1457</item>
         -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_secondary</item>
        <item name="colorAccent">@color/app_background</item>

    </style>

    <style name="AppTheme.Widget" />


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="MyToolbarText" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <!--  <item name="android:textColor">#1c3642</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
